{% extends "base.html.twig" %}

{% block title %} ContactManager - Accueil
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mes contacts</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Photo de profil</th>
                <th scope="col">Nom et Prénom</th>
                <th scope="col">Numéro</th>
                <th scope="col">Email</th>
            </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr class="table-primary">
                    <td>
                        {% if contact.photo %}
                            <img src="{{ contact.photo }}" alt="Photo de profil" style="height: 50px; width: 50px;">
                        {% else %}
                            <img src="{{ asset('assets/Default_pfp.jpg') }}" alt="Photo de profil par défaut" style="height: 50px; width: 50px;">
                        {% endif %}
                    </td>
                    <td>{{ contact.name }} {{ contact.firstname }}</td>
                    <td>{{ contact.phoneNumber }}</td>
                    <td>{{ contact.email }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}